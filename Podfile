  use_frameworks!

   # Database
   pod 'RealmSwift'
   pod 'RxRealm'

   # Navigation
   pod 'RxFlow' 

   # Assets
   pod 'R.swift'

   # UI
   pod 'PinLayout'
   pod 'IQKeyboardManagerSwift'
   pod 'DropDown'

   # Rx
   pod 'RxCocoa'
   pod 'RxSwift'
   pod 'RxDataSources'
   pod 'RxGesture'
    
   # SwiftLint
   pod 'SwiftLint'
   
   # Subscription
   pod 'Purchases', '3.2.2'

   # Internet connection
   pod 'ReachabilitySwift'

  target 'BabyGenderPlanningTests' do
    inherit! :search_paths
    # Pods for testing
  end

end
